<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de cadastro de Notícia</title>
		</head>
	<body>
		<% if(validacao){ %>
				<ul>
					<% for(let i=0; i<validacao.length; i++){ %>
							<li>
								<%=validacao[i].msg%>
							</li>
					<% } %>
				</ul>
			<% } %>

		<h1>Adicionar notícia</h1>
		<form action="/noticias/salvar" method="POST">
			<label>Título</label>
			<input type="text" name="titulo" id="titulo"  value="<%=noticia.titulo%>"/>
			<br />
			<label>Resumo</label>
			<input type="text" name="resumo" id="resumo"   value="<%=noticia.resumo%>"placeholder="Resumo noticia" />
			<br />
			<label>Autor</label>
			<input type="text" name="autor" id="autor"   value="<%=noticia.autor%>" placeholder="Autor da notícia" />
			<br /> 
			<label>Data</label>
			<input type="date" name="data_noticia" id="data_noticia" placeholder="Data da notícia" />
			<br />
			<label>Notícias</label>
			<textarea id='noticia' name="noticia" rows="5"   value="<%=noticia.noticia%>" cols="30"></textarea>
			<br />
			<button>Enviar</button>
		</form>
	</body>
</html>